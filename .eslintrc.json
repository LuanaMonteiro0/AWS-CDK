{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["prettier", "@typescript-eslint"],
    "rules": {
      "prettier/prettier": "warn",
      "@typescript-eslint/indent": "off",
      "space-before-function-paren": "off",
      "no-useless-constructor": "off",
      "no-unused-vars": "warn",
      "camelcase": "off",
      "indent": "off",
      "no-new": "off"
    }
  }